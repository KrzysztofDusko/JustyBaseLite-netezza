{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "outDir": "out",
        "lib": [
            "es2020"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "declaration": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "driver"
    ]
}